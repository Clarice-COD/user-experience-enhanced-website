        <section class="programma">
            <h2 titel-programm>PROGRAMMA</h2>
            <div class="timeline-programma">
                <div class="overview-programma">
                    {% for programma in programmas %}
                        <article class="show">
                            <img class="dj-img" src="/show.png" alt="">
